<article>
  <h1><%= @company.name %></h1>
  <% if @company.premium? %>
    <%= image_tag 'estrela.png' %>
  <% end %>
  <dl>
    <dt>Local</dt>
    <dd><%= @company.location %></dd>
    <dt>Email</dt>
    <dd><%= @company.mail %></dd>
    <dt>Telefone</dt>
    <dd><%= @company.phone %></dd>
  </dl>
  <section class="row row--border-bottom">
    <% if @company.jobs.any? %>
      <%= render @company.jobs, full_details: false %>
    <% else %>
      <p>
      Nenhuma vaga dispon√≠vel
      </p>
    <% end %>
  </section>
</article>
