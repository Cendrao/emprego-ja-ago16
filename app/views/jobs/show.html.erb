<article>
  <h1><%= @job.title %></h1>
  <% if @job.featured %>
    <strong>Vaga em Destaque</strong>
  <% end %>
  <dl>
    <dt>Categoria</dt>
    <dd><%= @job.category %></dd>
    <dt>Empresa</dt>
    <dd><%= @job.company %></dd>
    <dt>Descrição</dt>
    <dd><%= @job.description %></dd>
    <dt>Localização</dt>
    <dd><%= @job.location %></dd>
  </dl>
</article>
<aside>
  <%= link_to 'Voltar', root_path %>
</aside>
